{% extends "vueMere.html.twig" %}

{% block title %}
	{{ parent() }} - Index
{% endblock %}

{% block body %}
    {% for advert in adverts %}
			<div>
				{% if advert.image is not null %}
					<img src="{{ advert.image.url }}" alt="{{ advert.image.alt }}"> <a href="{{ path('oc_platform_remove_image_adverts', {'id':  advert.images.id}) }}">(x)</a>
				{% endif %}
				<br>Hello {{ advert.author }} : {{ advert.date|date("m/d/Y") }} <a href="{{ path('oc_platform_remove_advert', {'id': advert.id}) }}">(x)</a>
				{% if not advert.categories.empty %}
				<br>Cat√©goris :
					{% for category in advert.categories %}
					    <br>- {{ category.name }}{% if not loop.last %}; {% endif %}
					{% endfor %}
				{% endif %}
			</div>
		{% endfor %}
{% endblock %}

{% block footer %}
	{{ include("@BayardTestPlatform/Default/footer.html.twig") }}
{% endblock %}